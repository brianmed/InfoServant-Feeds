<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <link href="bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">

    <script src="jquery-1.10.1.min.js"></script>
</head>
<body>

    <div>

  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand visible-desktop hidden-phone hidden-tablet" href="/">InfoServant</a>
          <ul class="nav pull-right visible-desktop hidden-phone hidden-tablet">
            <li class=active><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
            <li><a href="mailto:support@infoservant.com">Contact</a></li>
          </ul>
          <ul class="nav hidden-desktop visible-phone visible-tablet">
            <li class=active><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
            <li><a href="mailto:support@infoservant.com">Contact</a></li>
          </ul>
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->

  <div class="row">
    <div class="span11 offset1">

  [% IF errors %]
      <div class="alert alert-error">
        [% errors %]
      </div>
  [% END %]

  [% IF success %]
      <div class="alert alert-success">
        [% success %]
      </div>
  [% END %]

  [% IF info %]
      <div class="alert alert-info">
        [% info %]
      </div>
  [% END %]

        <fieldset>
          <form class="well form-search" action="/login" method=post>
          <legend>Login</legend>
          <input type="text" class="input-large" placeholder="Email" name=login value=[% login | html%]>
          <input type="password" class="input-large" placeholder="Password" name=password value=[% password | html%]>
          <button type="submit" class="btn">Go</button>
          </form>
        </fieldset>

    </div>
  </div>

  </div>
</body>
</html>

