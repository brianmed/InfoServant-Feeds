<!DOCTYPE HTML>
<html>
<head>
    <link rel="stylesheet" href="bootstrap/css/bootstrap.css">
</head>
<body>

    <script src="jquery-latest.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>

    <div>

  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <div class="container" style="width: auto;">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">InfoServant: Your information, delivered.</a>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <li><a href="mailto:support@infoservant.com">Contact</a></li>
            <li><a href="/signup">Signup</a></li>
            <li class="divider-vertical"></li>
            <li class=active><a href="/login">Login</a></li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->

  <div class="row">
    <div class="span10 offset1">

  [% IF errors %]
      <div class="alert alert-error">
        [% errors %]
      </div>
  [% END %]

  [% IF success %]
      <div class="alert alert-success">
        [% success %]
      </div>
  [% END %]

  [% IF info %]
      <div class="alert alert-info">
        [% info %]
      </div>
  [% END %]

        <fieldset>
          <form class="well form-search" action="/login" method=post>
          <legend>Login</legend>
          <input type="text" class="input-large" placeholder="Username or email" name=login value=[% login %]>
          <input type="password" class="input-large" placeholder="Password" name=password value=[% password %]>
          <button type="submit" class="btn">Go</button>
          </form>
        </fieldset>

    </div>
  </div>

  </div>
</body>
</html>

